{
  "info": {
    "name": "Gatekeeper (Docker Compose)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080" },
    { "key": "api_key", "value": "changeme" }
  ],
  "item": [
    {
      "name": "Analyze Text",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-API-KEY", "value": "{{api_key}}" }
        ],
        "url": { "raw": "{{base_url}}/api/analyze", "host": ["{{base_url}}"], "path": ["api", "analyze"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Test message\",\n  \"metadata\": {\"source\": \"postman\"}\n}"
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/actuator/health", "host": ["{{base_url}}"], "path": ["actuator", "health"] }
      }
    },
    {
      "name": "Webhook Test (via webhook service)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-API-KEY", "value": "{{api_key}}" }
        ],
        "url": { "raw": "http://localhost:3001/webhook", "host": ["http://localhost:3001"], "path": ["webhook"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\": \"example\",\n  \"payload\": {\n    \"message\": \"Hello from Postman\"\n  }\n}"
        }
      }
    }
  ]
}

